{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "semi": "warn",
    "no-multiple-empty-lines": "warn",
    "react/prop-types": 0,
    "indent": ["error", 2],
    "no-multi-spaces": "error",
    "object-curly-spacing": ["error", "always"]
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}